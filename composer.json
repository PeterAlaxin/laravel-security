{
    "name": "peteralaxin/laravel-security",
    "description": "Comprehensive security package for Laravel applications - IP blocking, attack detection, error logging, security headers",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "security",
        "ip-blocking",
        "attack-detection",
        "error-logging",
        "csrf",
        "xss",
        "middleware"
    ],
    "authors": [
        {
            "name": "Peter Alaxin",
            "email": "peter@alaxin.sk"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/routing": "^11.0|^12.0",
        "symfony/html-sanitizer": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "PeterAlaxin\\LaravelSecurity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PeterAlaxin\\LaravelSecurity\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PeterAlaxin\\LaravelSecurity\\SecurityServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
